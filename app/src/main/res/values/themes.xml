<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LinkedOut" parent="Theme.Material3.Light.NoActionBar">
        <!-- 타이틀 바 숨기기 -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!-- 상태 표시줄 색상 설정 -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 스플래시 화면 배경 설정 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- 스플래시 화면 미리보기 비활성화 -->
        <item name="android:windowDisablePreview">true</item>

        <!-- 스플래시 화면 배경 설정 (Android 12 이상) -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="S">@drawable/splash</item>
        <!-- 스플래시 화면 아이콘 설정을 제거하거나 비활성화 -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@android:color/transparent</item>
        <!-- 아이콘 배경 설정 (빈 색상 사용) -->
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="S">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_200</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <!-- 스플래시 화면 미리보기 비활성화 -->
        <item name="android:windowDisablePreview">true</item>

        <!-- 스플래시 화면 아이콘 설정을 제거하거나 비활성화 -->
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Material3.Light.NoActionBar</item>
    </style>

</resources>
